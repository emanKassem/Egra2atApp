<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="@drawable/login_background"
    tools:context="com.example.a2laa.egra2atapp.view.LoginActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/roboto_bold"
                android:textSize="50dp"
                android:gravity="top"
                android:textColor="@color/primaryColor"
                android:layout_gravity="center_horizontal"
                android:text="@string/app_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textSize="30dp"
                android:gravity="top"
                android:textColor="@color/darkGtay"
                android:layout_gravity="center_horizontal"
                android:text="تسجيل الدخول"/>

            <EditText
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/text"
                android:drawableRight="@mipmap/user"
                android:drawablePadding="3dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="right|center"
                android:hint="أسم المستخدم"
                android:textColorHint="@color/primaryColor" />

            <EditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/text"
                android:drawableRight="@mipmap/pass"
                android:drawablePadding="3dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="right|center"
                android:hint="كلمة المرور"
                android:inputType="textPassword"
                android:textColorHint="@color/primaryColor" />

            <Button
                android:id="@+id/login"
                android:background="@drawable/button"
                android:textColor="@android:color/white"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/jozoor_font"
                android:layout_marginTop="24dp"
                android:text="@string/login" />

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"/>

</LinearLayout>