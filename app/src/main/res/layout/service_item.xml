<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16sp"
    android:padding="8dp"
    android:elevation="5dp"
    android:background="@drawable/inside_text">


    <TextView
        android:id="@+id/serviceNameTV"
        android:textSize="16sp"
        android:fontFamily="@font/jozoor_font"
        android:textColor="@color/primaryColor"
        android:drawableRight="@mipmap/egraapaper"
        android:drawablePadding="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:gravity=""
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deleteService"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="8dp"
        android:background="@mipmap/trash"
        app:layout_constraintBottom_toBottomOf="@+id/serviceNameTV"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/serviceNameTV" />

    <Button
        android:id="@+id/editService"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="16dp"
        android:background="@mipmap/edit"
        app:layout_constraintBottom_toBottomOf="@+id/serviceNameTV"
        app:layout_constraintLeft_toRightOf="@+id/deleteService"
        app:layout_constraintTop_toTopOf="@+id/serviceNameTV" />

</android.support.constraint.ConstraintLayout>